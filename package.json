{
  "name": "@stencila/executa",
  "version": "0.1.0",
  "description": "Execution delegator for various language backends.",
  "main": "index.js",
  "scripts": {
    "cli": "ts-node src/cli.ts",
    "cli:dev": "ts-node-dev src/cli.ts",
    "console": "ts-node src/console.ts",
    "format": "npx prettier --write './**/*.{js,json,md,ts,yaml}'",
    "lint": "eslint 'src/**/*.{ts,js}' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cover": "jest --coverage",
    "build": "tsc",
    "docs": "npm run docs:readme && npm run docs:ts",
    "docs:readme": "markdown-toc -i --maxdepth=4 README.md",
    "docs:ts": "typedoc --options typedoc.js ./src"
  },
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@gerrit0/typedoc": "^0.15.7",
    "@stencila/dev-config": "^1.2.0",
    "@types/jest": "^24.0.18",
    "@types/json-schema": "^7.0.3",
    "@types/minimist": "^1.2.0",
    "jest": "^24.9.0",
    "markdown-toc": "^1.2.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "ts-node-dev": "^1.0.0-pre.43",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "@stencila/logga": "^1.3.0",
    "@stencila/schema": "^0.29.0",
    "@types/ws": "^6.0.3",
    "ajv": "^6.10.2",
    "cross-fetch": "^3.0.4",
    "fastify": "^2.10.0",
    "fastify-jwt": "^1.1.0",
    "fastify-websocket": "^0.6.0",
    "isomorphic-ws": "^4.0.1",
    "length-prefixed-stream": "^2.0.0",
    "minimist": "^1.2.0"
  },
  "prettier": "@stencila/dev-config/prettier-config.json",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-case": [
        2,
        "always",
        "sentence-case"
      ],
      "subject-case": [
        2,
        "always",
        "sentence-case"
      ]
    }
  },
  "eslintConfig": {
    "extends": "@stencila/eslint-config"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/src/**/*.test.[jt]s"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "extends": "@stencila/semantic-release-config"
  }
}
