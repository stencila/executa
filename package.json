{
  "name": "@stencila/executa",
  "version": "1.7.1",
  "description": "Document executors: protocols, transports and reference implementations",
  "main": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "browser": "./dist/browser/index.js",
  "bin": "./dist/lib/cli/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "cli": "ts-node --files src/cli",
    "cli:dev": "ts-node-dev --files src/cli --debug=1",
    "cli:debug": "node --require ./ts-node-register.js --inspect=9229 src/cli --debug=1",
    "repl:debug": "node --require ./ts-node-register.js --inspect=9229 src/cli repl --debug=1",
    "console": "ts-node --files src/console.ts",
    "format": "npx prettier --write './**/*.{js,json,md,ts,yaml}'",
    "lint": "eslint 'src/**/*.{ts,js}' --fix",
    "depcheck": "npx depcheck --ignore-dirs=docs,dist",
    "test": "jest --runInBand ",
    "test:watch": "jest --watch",
    "test:cover": "jest --runInBand --coverage",
    "test:browser": "jest --runInBand --env=jsdom",
    "build": "npm run build:config && npm run build:node && npm run build:browser",
    "build:config": "configa schema",
    "build:node": "tsc",
    "build:browser": "rollup --config",
    "docs": "npm run docs:readme && npm run docs:api",
    "docs:readme": "npm run docs:readme:config && npm run docs:readme:toc",
    "docs:readme:config": "configa readme",
    "docs:readme:toc": "markdown-toc -i --maxdepth=4 README.md",
    "docs:api": "typedoc --options typedoc.js ./src"
  },
  "author": "Executa contributors (https://github.com/stencila/executa/graphs/contributors)",
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/preset-typescript": "7.7.7",
    "@gerrit0/typedoc": "0.15.12",
    "@stencila/dev-config": "1.4.5",
    "@types/jest": "24.0.25",
    "@types/jmespath": "0.15.0",
    "@types/json-schema": "7.0.4",
    "@types/lolex": "5.1.0",
    "@types/mkdirp": "0.5.2",
    "@types/nanoid": "2.1.0",
    "@types/split2": "2.1.6",
    "depcheck": "0.9.1",
    "jest": "24.9.0",
    "lolex": "5.1.2",
    "markdown-toc": "1.2.0",
    "rollup": "1.28.0",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-builtins": "2.1.2",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-typescript2": "0.25.3",
    "ts-jest": "24.2.0",
    "ts-node": "8.5.4",
    "ts-node-dev": "1.0.0-pre.44",
    "typescript": "3.7.4"
  },
  "dependencies": {
    "@stencila/configa": "^0.4.0",
    "@stencila/logga": "^2.1.0",
    "@stencila/schema": "^0.32.0",
    "@types/ws": "6.0.4",
    "ajv": "^6.10.2",
    "chalk": "^3.0.0",
    "cli-highlight": "^2.1.4",
    "cross-fetch": "^3.0.4",
    "external-ip": "^2.1.1",
    "fastify": "^2.10.0",
    "fastify-cors": "^3.0.0",
    "fastify-jwt": "^1.1.0",
    "fastify-static": "^2.5.1",
    "fastify-websocket": "^1.0.0",
    "globby": "^11.0.0",
    "historic-readline": "^1.0.8",
    "isomorphic-ws": "^4.0.1",
    "jmespath": "^0.15.0",
    "length-prefixed-stream": "^2.0.0",
    "mkdirp": "^0.5.1",
    "nanoid": "^2.1.6",
    "ora": "^4.0.3",
    "p-retry": "^4.2.0",
    "split2": "^3.1.1"
  },
  "prettier": "@stencila/dev-config/prettier-config.json",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-case": [
        2,
        "always",
        "sentence-case"
      ],
      "subject-case": [
        2,
        "always",
        "sentence-case"
      ]
    }
  },
  "eslintConfig": {
    "extends": "@stencila/eslint-config",
    "env": {
      "es6": true,
      "node": true,
      "jest": true
    },
    "ignorePatterns": [
      "src/http/static/browser/index.js"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/src/**/*.test.[jt]s"
    ],
    "coveragePathIgnorePatterns": [
      "test/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "extends": "@stencila/semantic-release-config"
  },
  "renovate": {
    "extends": [
      "@stencila"
    ]
  }
}
