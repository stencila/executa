{
  "name": "executa",
  "version": "0.0.1",
  "description": "Execution delegator for various language backends.",
  "main": "index.js",
  "scripts": {
    "serve": "ts-node src/serve.ts --tcp=7300",
    "format": "npx prettier --write './**/*.{js,json,md,ts,yaml}'",
    "lint": "eslint 'src/**/*.{ts,js}' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cover": "jest --coverage"
  },
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@stencila/dev-config": "^1.2.0",
    "@types/jest": "^24.0.18",
    "@types/json-schema": "^7.0.3",
    "@types/minimist": "^1.2.0",
    "jest": "^24.9.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "ts-node-dev": "^1.0.0-pre.42",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "@stencila/logga": "^1.3.0",
    "@stencila/schema": "^0.29.0",
    "ajv": "^6.10.2",
    "length-prefixed-stream": "^2.0.0",
    "minimist": "^1.2.0"
  },
  "prettier": "@stencila/dev-config/prettier-config.json",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-case": [
        2,
        "always",
        "sentence-case"
      ],
      "subject-case": [
        2,
        "always",
        "sentence-case"
      ]
    }
  },
  "eslintConfig": {
    "extends": "@stencila/eslint-config"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/src/**/*.test.[jt]s"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "extends": "@stencila/semantic-release-config"
  }
}
